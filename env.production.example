# Production Environment Variables for Render Deployment

# Server Configuration
PORT=10000
NODE_ENV=production

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://evfinder-user:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/ev-finder?retryWrites=true&w=majority

# JWT Configuration (Generate a strong secret)
JWT_SECRET=your-super-secure-production-jwt-secret-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_AUDIENCE=your-auth0-api-identifier

# CORS Configuration (Add your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.netlify.app,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_VERSION=v1 